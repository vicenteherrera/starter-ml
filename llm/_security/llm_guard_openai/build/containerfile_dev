FROM quay.io/vicenteherrera/python-dev-shell@sha256:053ea30835edfccfb17000ccc45121da4b02abece614627b0e499ea67ea61238

ARG USER_ID
USER ${USER_ID:-10000}
ENV HOME="/home/user"
WORKDIR ${HOME}

ARG DIR
COPY --chown=${USER_ID:-10000} . ./${DIR:-app}

RUN cd ${DIR:-app} && make requirements install_python install required_python download

